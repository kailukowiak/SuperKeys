{
    "title": "SuperKeys - Cross-platform Hyper Key",
    "rules": [
        {
            "description": "CapsLock to Hyper/Escape",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_shift",
                            "modifiers": ["right_command", "right_control", "right_option"]
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "escape"
                        }
                    ]
                }
            ]
        },
        {
            "description": "Hyper+Esc toggles CapsLock",
            "manipulators": [
